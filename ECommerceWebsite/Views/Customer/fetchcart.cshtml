
@{
    ViewData["Title"] = "fetchcart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ECommerceWebsite.Models.Cart>

<div class="container mt-5">
    <h2 class="text-center mb-4">Shopping Cart</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="@("~/Product_images/"+item.products.product_image)" asp-append-version=true class="img-fluid rounded" alt="@item.products.product_name">
                            </div>
                            <div class="col-md-6">
                                <h5 class="card-title">@item.products.product_name</h5>
                                <p class="card-text">@item.products.product_description</p>
                                <p class="card-text"><small class="text-muted">Category: @item.products.Category.category_name</small></p>
                            </div>
                            <div class="col-md-3 text-end">
                                <p class="card-text"><strong>@item.products.product_price</strong></p>
                                <input type="number" class="form-control mb-2" value="@item.cart_quantity" min="1">
                                <a asp-action="Removecart" asp-controller="Customer" asp-route-id="@item.cart_id" class="btn btn-danger btn-sm">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

