@model ECommerceWebsite.Models.Category;

<div class="container-fluid full-height d-flex justify-content-start align-items-start">
    <div class="row w-100">
        <div class="col-md-12">
            <div class="container">
                <div class="row" style="margin-left:150px;">
                    <div class="col-md-12 col-10 mx-auto">
                        <h1 class="mt-3 mb-3 text-danger">
                            ARE YOU SURE DELETE THIS Category Details ? <h1 />
                            @* <img src="@("~/Customer_images/"+Model.customer_img)" asp-append-version=true style="width:250px;height:250px;" /> *@
                            <table class="table text-dark mb-5">

                                <tbody>

                                    <tr>
                                        <th scope="col">Category ID</th>
                                        <td class="font-weight-100">@Model.category_id</td>
                                    </tr>

                                    <tr>
                                        <th scope="col">Category Name</th>
                                        <td class ="font-weight-100">@Model.category_name</td>

                                    </tr>

                                   

                                    <tr>
                                        <td class="d-flex">

                                            <a asp-action="fetchCategory" asp-controller="Admin" asp-route-id="@Model.category_id" class="btn btn-warning text-white" style="margin-right: 12px;">Back</a>
                                            <a asp-action="deleteCategory" asp-controller="Admin" asp-route-id="@Model.category_id" class="btn btn-danger">Delete</a>


                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                    </div>

                </div>



            </div>
        </div>
    </div>
</div>