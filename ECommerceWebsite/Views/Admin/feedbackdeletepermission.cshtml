

@model ECommerceWebsite.Models.Feedback;

<div class="container-fluid full-height d-flex justify-content-start align-items-start">
    <div class="row w-100">
        <div class="col-md-12">
            <div class="container">
                <div class="row" style="margin-left:150px;">
                    <div class="col-md-12 col-10 mx-auto">
                        <h1 class="mt-3 mb-3 text-danger">
                            ARE YOU SURE DELETE THIS Feedback Details ? <h1 />
                           
                            <table class="table text-dark mb-5">

                                <tbody>

                                    <tr>
                                        <th scope="col">Feedback ID</th>
                                        <td class="font-weight-100">@Model.feedback_id</td>
                                    </tr>

                                    <tr>
                                        <th scope="col">Feedback Name</th>
                                        <td class="font-weight-100">@Model.feedback_name</td>

                                    </tr>
                                    <tr>
                                        <th scope="col">Feedback Message</th>
                                        <td class="font-weight-100">@Model.feedback_message</td>

                                    </tr>



                                    <tr>
                                        <td class="d-flex">

                                            <a asp-action="FetchAllFeedback" asp-controller="Admin" asp-route-id="@Model.feedback_id" class="btn btn-warning text-white" style="margin-right: 12px;">Back</a>
                                            <a asp-action="deletefeedback" asp-controller="Admin" asp-route-id="@Model.feedback_id" class="btn btn-danger">Delete</a>


                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                    </div>

                </div>



            </div>
        </div>
    </div>
</div>

