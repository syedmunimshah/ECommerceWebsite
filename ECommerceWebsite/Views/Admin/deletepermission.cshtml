@model ECommerceWebsite.Models.Customer;

<div class="container-fluid full-height d-flex justify-content-start align-items-start">
    <div class="row w-100">
        <div class="col-md-12">
            <div class="container">
                <div class="row" style="margin-left:150px;">
                    <div class="col-md-12 col-10 mx-auto">
                        <h1 class="mt-3 mb-3 text-danger">
                            ARE YOU SURE DELETE THIS Customer Details ? <h1 />
                            <img src="@("~/Customer_images/"+Model.customer_img)" asp-append-version=true style="width:250px;height:250px;" />
                            <table class="table text-dark mb-5">

                                <tbody>

                                    <tr>
                                        <th scope="col">Customer ID</th>
                                        <td>@Model.customer_id</td>
                                    </tr>

                                    <tr>
                                        <th scope="col">Customer Name</th>
                                        <td>@Model.customer_name</td>

                                    </tr>

                                    <tr>
                                        <th scope="col">Customer Email</th>
                                        <td>@Model.customer_email</td>
                                    </tr>

                                    <tr>
                                        <th scope="col">Customer phone</th>
                                        <td>@Model.customer_phone</td>
                                    </tr>

                                    <tr>
                                        <th scope="col">Customer Password</th>
                                        <td>@Model.customer_password</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Customer Country</th>
                                        <td>@Model.customer_country</td>
                                    </tr>

                                    <tr>
                                        <th scope="col">Customer City</th>
                                        <td>@Model.customer_city</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Customer Address</th>
                                        <td>@Model.customer_address</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Customer Gender</th>
                                        <td>@Model.customer_gender</td>
                                    </tr>

                           <tr>
                                        <td class="d-flex">
                                           
                                            <a asp-action="getallCustomer" asp-controller="Admin" asp-route-id="@Model.customer_id" class="btn btn-warning text-white" style="margin-right: 12px;">Back</a>
                                            <a asp-action="deletecustomer" asp-controller="Admin" asp-route-id="@Model.customer_id" class="btn btn-danger">Delete</a>


                                        </td>
                           </tr>

                                </tbody>
                            </table>
                    </div>

                </div>



            </div>
        </div>
    </div>
</div>