﻿
@model IEnumerable<ECommerceWebsite.Models.Product>
    <div class="container-fluid full-height d-flex justify-content-start align-items-start">
        <div class="row w-100">
            <div class="col-md-12">
                <div class="container">
                    <div class="row" style="margin-left:150px;">
                        <div class="col-md-12 col-10 mx-auto">

                            <table class="table text-dark">
                            <a asp-action="addProduct" asp-controller="admin" class="btn btn-primary text-white" style="display: flex; justify-content: center; width: 130px; margin-left: 121px; margin-top: 10px;margin-bottom:10px"> Add Product</a>
                                <thead>
                                    <tr>

                                        <th scope="col">Product Name</th>
                                        <th scope="col">Product Price</th>
                                        
                                        <th scope="col">Product Image</th>
                                        <th scope="col">Option</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Cat in Model)
                                    {
                                        <tr>

                                        <th scope="row">@Cat.product_name</th>
                                            <th scope="row">@Cat.product_price</th>
                                            @* <th scope="row">@Cat.product_description</th> *@
                                        <th scope="row">
                                            <img src="@("~/Product_images/"+Cat.product_image)" asp-append-version="true" alt="Product Image" style="height:50px;width:50px" />
                                        </th>
                                            <td class="d-flex">
                                                <a asp-action="cartupdate" asp-controller="Admin" asp-route-id="@Cat.product_id" class="btn btn-primary" style="margin-right: 12px;"> update</a>
                                            <a asp-action="cartDetails" asp-controller="Admin" asp-route-id="@Cat.product_id" class="btn btn-warning text-white" style="margin-right: 12px;"> Detail</a>
                                            <a asp-action="cartdeletepermission" asp-controller="Admin" asp-route-id="@Cat.product_id" class="btn btn-danger">Delete</a>

                                            </td>


                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>

                    </div>



                </div>
            </div>
        </div>
    </div>