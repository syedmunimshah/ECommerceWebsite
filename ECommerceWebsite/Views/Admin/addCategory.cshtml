@model ECommerceWebsite.Models.Category

<div class="container-fluid full-height d-flex justify-content-start align-items-start">
    <div class="row w-100">
        <div class="col-md-12">
            <div class="container">
                <div class="row" style="margin-left:200px;">
                    <div class="col-md-6 col-10 mx-auto">

                        <h2 class="mt-3">Add New Category</h2>


                        <form method="post" asp-action="addCategory">
                            <div class="mb-3">
                               
                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" asp-for="category_name">Name</label>
                                    <input asp-for="category_name" class="form-control">
                                </div>
                               
                                <button type="submit" class="btn btn-primary mb-5">Add Category</button>
                            </div>
                        </form>
                    </div>




                </div>
            </div>
        </div>
    </div>

