@model ECommerceWebsite.Models.Customer

<div class="container-fluid full-height d-flex justify-content-start align-items-start">
    <div class="row w-100">
        <div class="col-md-12">
            <div class="container">
                <div class="row" style="margin-left:200px;">
                    <div class="col-md-6 col-10 mx-auto">
                        
                        <h2 class="mt-3">Update Profile</h2>
                        

                        <form method="post" asp-action="updatecustomer" enctype="multipart/form-data">
                            <div class="mb-3">
                                <div class="form-group">
                                    <input asp-for="customer_id" type="hidden">
                                </div>
                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="admin_name">Name</label>
                                    <input asp-for="customer_name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="admin_email">Email address</label>
                                    <input asp-for="customer_email" class="form-control">
                                </div>
                                <div class="form-group ">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_phone">Phone Number</label>
                                    <input asp-for="customer_phone" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_password">Password</label>
                                    <input asp-for="customer_password" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_country">Country</label>
                                    <input asp-for="customer_country" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_city">City</label>
                                    <input asp-for="customer_city" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_address">Address</label>
                                    <input asp-for="customer_address" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_gender">Gender</label>
                                    <input asp-for="customer_gender" class="form-control">
                                </div>
                                
                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" for="customer_img">Image</label>
                                   
                                    <input class="d-flex justify-content-start align-items-start" id="bordernone" type="file" asp-for="customer_img" />
                                </div>
                                <button type="submit" class="btn btn-primary mb-5">Update</button>
                            </div>
                        </form>
                    </div>
                



            </div>
        </div>
    </div>
</div>

