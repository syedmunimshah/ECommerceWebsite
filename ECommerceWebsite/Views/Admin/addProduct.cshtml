@model ECommerceWebsite.Models.Product

<div class="container-fluid full-height d-flex justify-content-start align-items-start">
    <div class="row w-100">
        <div class="col-md-12">
            <div class="container">
                <div class="row" style="margin-left:200px;">
                    <div class="col-md-6 col-10 mx-auto">

                        <h2 class="mt-3">Add New Product</h2>


                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" asp-for="product_name">Name</label>
                                    <input asp-for="product_name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" asp-for="product_price">Price</label>
                                    <input asp-for="product_price" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" asp-for="product_description">Description</label>
                                    <input asp-for="product_description" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="d-flex justify-content-start align-items-start" asp-for="product_image">Image</label>
                                    <input id="bordernone" asp-for="product_image" type="File" class="form-control p-0">
                                </div>
                                <div class="form-group d-flex justify-content-start align-items-start">
                                 
                                    <label asp-for="cat_id" class="control-label"></label>
                                    <select asp-for="cat_id" class="form-select d-flex" asp-items="ViewBag.cat" style="margin-left: 20px;">
                                        <option value="" disabled selected>--Select Catgory--</option>
                                    </select>
                                  
                                </div>

                                <button type="submit" class="btn btn-primary mb-5">Add Product</button>
                            </div>
                        </form>
                    </div>




                </div>
            </div>
        </div>
    </div>

